# Server Configuration
NODE_ENV=development
PORT=6000
SERVER_URL=http://localhost:6000

# Database
DATABASE_URL=your_mongodb_connection_string_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Reset
JWT_RESET_PASSWORD_TOKEN_SECRET_KEY=your_reset_password_secret_here
JWT_RESET_PASSWORD_TOKEN_EXPIRES_IN=10m

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# Email (if using email features)
EMAIL_SENDER_HOST_USER=your_email@example.com

# Stripe (if using payment features)
STRIPE_SECRET=your_stripe_secret_key_here

# Stats
STATS_ID=your_stats_id_here
